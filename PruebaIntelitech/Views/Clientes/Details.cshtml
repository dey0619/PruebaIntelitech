@model PruebaIntelitech.Models.Clientes

@{
    ViewBag.Title = "Details";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Empleados - Creación </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("InteliTech", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Crear Empleados", "Index", "Empleados")</li>
                    <li>@Html.ActionLink("Crear Cliente", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Crear Productos", "Index", "Productos")</li>
                    <li>@Html.ActionLink("Crear Factura", "Create", "Facturas")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="div_Left">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="contenedor">
                <div>
                    @Html.ActionLink("Regresar", "Index")
                </div>
                <div>
                    @Html.ActionLink("Editar", "Edit", new { id = Model.IdCliente })
                </div>
                <hr />
                <h4>Registro de empleados</h4>
                <hr />

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <b> @Html.DisplayNameFor(model => model.Documento) </b>
                            @Html.DisplayFor(model => model.Documento)

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <b> @Html.DisplayNameFor(model => model.PrimerNombre)</b>
                            @Html.DisplayFor(model => model.PrimerNombre)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <b> @Html.DisplayNameFor(model => model.SegundoNombre)</b>
                            @Html.DisplayFor(model => model.SegundoNombre)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <b> @Html.DisplayNameFor(model => model.PrimerApellido)</b>
                            @Html.DisplayFor(model => model.PrimerApellido)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <b>  @Html.DisplayNameFor(model => model.SegundoApellido)</b>
                            @Html.DisplayFor(model => model.SegundoApellido)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <b>  @Html.DisplayNameFor(model => model.Direccion)</b>
                            @Html.DisplayFor(model => model.Direccion)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <b>  @Html.DisplayNameFor(model => model.Telefono)</b>
                            @Html.DisplayFor(model => model.Telefono)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <b> @Html.DisplayNameFor(model => model.FechaNacimiento)</b>
                            @Html.DisplayFor(model => model.FechaNacimiento)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <b> @Html.DisplayNameFor(model => model.Email)</b>
                            @Html.DisplayFor(model => model.Email)
                        </div>
                    </div>
                </div>

            </div>


        }

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
